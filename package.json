{
  "name": "koa-static-ts",
  "version": "0.1.11",
  "description": "Serve static files",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "clean": "node tools/build clean",
    "build": "npm run clean && tsc -p .",
    "test": "npm run build && nyc ava",
    "bump": "standard-version",
    "release": "git push --follow-tags origin master"
  },
  "engines": {
    "node": ">=8.11.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HKUST-VISLab/koa-static-ts.git"
  },
  "keywords": [
    "koa",
    "static",
    "files",
    "typescript"
  ],
  "author": "chenzhutian",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/HKUST-VISLab/koa-static-ts/issues"
  },
  "homepage": "https://github.com/HKUST-VISLab/koa-static-ts#readme",
  "dependencies": {
    "@types/koa": "^2.0.48",
    "@types/node": "^12.0.2"
  },
  "devDependencies": {
    "@types/supertest": "^2.0.7",
    "nyc": "^14.1.1",
    "ava": "^1.4.1",
    "koa": "^2.7.0",
    "shelljs": "^0.8.3",
    "standard-version": "^6.0.1",
    "supertest": "^4.0.2",
    "tslint": "^5.16.0",
    "typescript": "^3.4.5",
    "iltorb": "^2.4.3"
  },
  "peerDependencies": {
    "koa": "^2.7.0"
  },
  "ava": {
    "files": [
      "dist/**/*.spec.js"
    ]
  },
  "nyc": {
    "include": [
      "dist/**/*.js"
    ],
    "exclude": [
      "dist/**/*.spec.js"
    ],
    "extensions": [
      ".ts"
    ],
    "sourceMap": true,
    "reporter": [
      "lcov",
      "text"
    ],
    "cache": true,
    "check-coverage": false
  }
}
