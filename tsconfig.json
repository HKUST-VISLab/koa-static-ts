{
    "compilerOptions": {
        "target": "es6",
        "alwaysStrict": true,
        "outDir": "dist",
        "module": "commonjs",
        "sourceMap": true,
        "strict": true,
        "preserveConstEnums": true,
        "noUnusedLocals": true,
        "experimentalDecorators": true,
        "declaration": true,
        "rootDir": "."
    },
    "include": [
        "src/**/*.ts",
        "test/**/*.ts"
    ]
}